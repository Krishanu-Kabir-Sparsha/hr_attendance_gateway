<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_employee_form_inherit_gateway" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.gateway</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <!-- Add device button to button box -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_device_mappings" type="object" class="oe_stat_button" icon="fa-desktop">
                    <field name="device_user_count" widget="statinfo" string="Devices"/>
                </button>
            </xpath>

            <!-- Add shift field to HR Settings page -->
            <xpath expr="//page[@name='hr_settings']//group[@name='identification_group']" position="after">
                <group string="Attendance Settings" name="attendance_settings">
                    <field name="shift_id"/>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Employee Tree View - add shift column -->
    <record id="view_employee_tree_inherit_gateway" model="ir.ui.view">
        <field name="name">hr.employee.tree.inherit.gateway</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//list" position="inside">
                <field name="shift_id" optional="hide"/>
            </xpath>
        </field>
    </record>

</odoo>