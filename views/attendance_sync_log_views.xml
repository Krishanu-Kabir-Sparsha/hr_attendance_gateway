<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_attendance_sync_log_tree" model="ir.ui.view">
        <field name="name">attendance.sync.log.tree</field>
        <field name="model">attendance.sync.log</field>
        <field name="arch" type="xml">
            <list string="Sync History" decoration-success="state=='success'" decoration-danger="state=='error'">
                <field name="sync_date"/>
                <field name="device_id"/>
                <field name="records_fetched"/>
                <field name="records_processed"/>
                <field name="records_failed"/>
                <field name="duration" widget="float_time"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>
    
    <record id="action_attendance_sync_log" model="ir.actions.act_window">
        <field name="name">Sync History</field>
        <field name="res_model">attendance.sync.log</field>
        <field name="view_mode">list,form</field>
    </record>
    
</odoo>