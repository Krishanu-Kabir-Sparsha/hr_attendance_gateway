<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Root Menu -->
    <menuitem id="menu_attendance_gateway_root"
              name="Attendance Gateway"
              sequence="60"
              web_icon="hr_attendance_gateway,static/description/icon.png"/>

    <!-- Devices -->
    <menuitem id="menu_devices"
              name="Devices"
              parent="menu_attendance_gateway_root"
              sequence="10"/>

    <menuitem id="menu_device_list"
              name="Devices"
              parent="menu_devices"
              action="action_attendance_device"
              sequence="10"/>

    <menuitem id="menu_device_users"
              name="User Mappings"
              parent="menu_devices"
              action="action_attendance_device_user"
              sequence="20"/>

    <!-- Logs -->
    <menuitem id="menu_logs"
              name="Logs"
              parent="menu_attendance_gateway_root"
              sequence="20"/>

    <menuitem id="menu_punch_logs"
              name="Punch Logs"
              parent="menu_logs"
              action="action_attendance_raw_log"
              sequence="10"/>

    <menuitem id="menu_sync_logs"
              name="Sync History"
              parent="menu_logs"
              action="action_attendance_sync_log"
              sequence="20"/>

    <!-- Configuration -->
    <menuitem id="menu_config"
              name="Configuration"
              parent="menu_attendance_gateway_root"
              sequence="100"
              groups="group_attendance_gateway_manager"/>

    <menuitem id="menu_shifts"
              name="Shifts"
              parent="menu_config"
              action="action_attendance_shift"
              sequence="10"/>

</odoo>