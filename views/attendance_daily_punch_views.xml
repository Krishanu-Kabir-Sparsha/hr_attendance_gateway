<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Daily Punch Tree View -->
    <record id="view_attendance_daily_punch_tree" model="ir.ui.view">
        <field name="name">attendance.daily.punch.tree</field>
        <field name="model">attendance.daily.punch</field>
        <field name="arch" type="xml">
            <list string="Daily Punches" 
                  decoration-success="is_complete"
                  decoration-warning="check_in_time and not check_out_time">
                <field name="date"/>
                <field name="employee_id"/>
                <field name="shift_id"/>
                <field name="check_in_time" widget="datetime"/>
                <field name="break_start_time" widget="datetime" optional="show"/>
                <field name="break_end_time" widget="datetime" optional="show"/>
                <field name="check_out_time" widget="datetime"/>
                <field name="overtime_in_time" widget="datetime" optional="hide"/>
                <field name="overtime_out_time" widget="datetime" optional="hide"/>
                <field name="work_hours" widget="float_time"/>
                <field name="is_complete"/>
            </list>
        </field>
    </record>

    <!-- Daily Punch Form View -->
    <record id="view_attendance_daily_punch_form" model="ir.ui.view">
        <field name="name">attendance.daily.punch.form</field>
        <field name="model">attendance.daily.punch</field>
        <field name="arch" type="xml">
            <form string="Daily Punch Record">
                <sheet>
                    <group>
                        <group string="Employee Info">
                            <field name="employee_id"/>
                            <field name="date"/>
                            <field name="shift_id"/>
                            <field name="attendance_id"/>
                        </group>
                        <group string="Summary">
                            <field name="work_hours" widget="float_time"/>
                            <field name="break_hours" widget="float_time"/>
                            <field name="overtime_hours" widget="float_time"/>
                            <field name="total_hours" widget="float_time"/>
                            <field name="is_complete"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Punch Times" name="times">
                            <group>
                                <group string="Regular">
                                    <field name="check_in_time"/>
                                    <field name="check_out_time"/>
                                </group>
                                <group string="Break">
                                    <field name="break_start_time"/>
                                    <field name="break_end_time"/>
                                </group>
                            </group>
                            <group>
                                <group string="Overtime">
                                    <field name="overtime_in_time"/>
                                    <field name="overtime_out_time"/>
                                </group>
                            </group>
                        </page>
                        <page string="Raw Logs" name="logs">
                            <group>
                                <field name="check_in_log_id"/>
                                <field name="break_start_log_id"/>
                                <field name="break_end_log_id"/>
                                <field name="check_out_log_id"/>
                                <field name="overtime_in_log_id"/>
                                <field name="overtime_out_log_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_attendance_daily_punch_search" model="ir.ui.view">
        <field name="name">attendance.daily.punch.search</field>
        <field name="model">attendance.daily.punch</field>
        <field name="arch" type="xml">
            <search string="Daily Punches">
                <field name="employee_id"/>
                <field name="date"/>
                <filter string="Today" name="today" domain="[('date', '=', context_today())]"/>
                <filter string="This Week" name="week" domain="[('date', '>=', (context_today() - datetime.timedelta(days=7)))]"/>
                <filter string="Complete" name="complete" domain="[('is_complete', '=', True)]"/>
                <filter string="Incomplete" name="incomplete" domain="[('is_complete', '=', False), ('check_in_time', '!=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Employee" name="group_employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date'}"/>
                    <filter string="Shift" name="group_shift" context="{'group_by': 'shift_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_attendance_daily_punch" model="ir.actions.act_window">
        <field name="name">Daily Punches</field>
        <field name="res_model">attendance.daily.punch</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_today': 1}</field>
    </record>

</odoo>