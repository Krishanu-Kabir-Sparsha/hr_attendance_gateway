<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Category -->
        <record id="module_category_attendance_gateway" model="ir.module.category">
            <field name="name">Attendance Gateway</field>
            <field name="sequence">15</field>
        </record>

        <!-- User Group -->
        <record id="group_attendance_gateway_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_attendance_gateway"/>
            <field name="implied_ids" eval="[(4, ref('hr.group_hr_user'))]"/>
        </record>

        <!-- Manager Group -->
        <record id="group_attendance_gateway_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_attendance_gateway"/>
            <field name="implied_ids" eval="[(4, ref('group_attendance_gateway_user')), (4, ref('hr.group_hr_manager'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <!-- Multi-company rules -->
        <record id="attendance_device_comp_rule" model="ir.rule">
            <field name="name">Attendance Device: multi-company</field>
            <field name="model_id" ref="model_attendance_device"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>

        <record id="attendance_device_user_comp_rule" model="ir.rule">
            <field name="name">Attendance Device User: multi-company</field>
            <field name="model_id" ref="model_attendance_device_user"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>

        <record id="attendance_raw_log_comp_rule" model="ir.rule">
            <field name="name">Attendance Raw Log: multi-company</field>
            <field name="model_id" ref="model_attendance_raw_log"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>

        <record id="attendance_sync_log_comp_rule" model="ir.rule">
            <field name="name">Attendance Sync Log: multi-company</field>
            <field name="model_id" ref="model_attendance_sync_log"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>

    </data>
</odoo>