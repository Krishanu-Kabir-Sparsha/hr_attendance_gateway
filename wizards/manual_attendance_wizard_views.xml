<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Form View -->
    <record id="view_manual_attendance_wizard_form" model="ir.ui.view">
        <field name="name">manual.attendance.wizard.form</field>
        <field name="model">manual.attendance.wizard</field>
        <field name="arch" type="xml">
            <form string="Manual Attendance Override">
                <group>
                    <group>
                        <field name="raw_log_id" readonly="1"/>
                        <field name="device_user_id" readonly="1"/>
                        <field name="timestamp" readonly="1"/>
                    </group>
                    <group>
                        <field name="employee_id"/>
                        <field name="action_type"/>
                        <field name="adjusted_timestamp" invisible="action_type == 'ignore'"/>
                    </group>
                </group>
                <group>
                    <field name="reason" placeholder="Explain why manual override is needed..."/>
                </group>
                <footer>
                    <button name="action_apply" string="Apply" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_manual_attendance_wizard" model="ir.actions.act_window">
        <field name="name">Manual Attendance Override</field>
        <field name="res_model">manual.attendance.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_attendance_raw_log"/>
        <field name="binding_view_types">form</field>
    </record>
    
</odoo>