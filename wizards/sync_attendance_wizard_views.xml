<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_sync_attendance_wizard_form" model="ir.ui.view">
        <field name="name">sync.attendance.wizard.form</field>
        <field name="model">sync.attendance.wizard</field>
        <field name="arch" type="xml">
            <form string="Sync Attendance">
                <group>
                    <field name="device_id"/>
                    <field name="from_date"/>
                    <field name="to_date"/>
                </group>
                <footer>
                    <button name="action_sync" string="Sync" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
</odoo>