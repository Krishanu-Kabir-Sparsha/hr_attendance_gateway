<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_user_mapping_wizard_form" model="ir.ui.view">
        <field name="name">user.mapping.wizard.form</field>
        <field name="model">user.mapping.wizard</field>
        <field name="arch" type="xml">
            <form string="Map Device Users">
                <group>
                    <field name="device_id"/>
                </group>
                <field name="line_ids">
                    <list editable="bottom">
                        <field name="device_user_code"/>
                        <field name="device_user_name"/>
                        <field name="employee_id"/>
                    </list>
                </field>
                <footer>
                    <button name="action_fetch_users" string="Fetch Users" type="object" class="btn-secondary"/>
                    <button name="action_apply_mappings" string="Apply Mappings" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
</odoo>