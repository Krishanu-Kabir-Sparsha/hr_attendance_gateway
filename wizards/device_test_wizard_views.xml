<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_device_test_wizard_form" model="ir.ui.view">
        <field name="name">device.test.wizard.form</field>
        <field name="model">device.test.wizard</field>
        <field name="arch" type="xml">
            <form string="Test Device Connection">
                <group>
                    <field name="device_id"/>
                    <field name="test_result" readonly="1" invisible="not test_result"/>
                </group>
                <footer>
                    <button name="action_test" string="Test Connection" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>